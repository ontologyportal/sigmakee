(subclass ServiceAnimal Attribute)
(documentation ServiceAnimal EnglishLanguage "A service animal is an animal that has been trained to assist a disabled person. [from Wikipedia]")
(termFormat EnglishLanguage ServiceAnimal "service animal")

(subclass Training Guiding)

(=>
  (instance ?SA ServiceAnimal)
  (hasPurpose ?SA
    (exists (?H ?HELP ?T)
      (and
        (instance ?H Human)
        (instance ?HELP Helping)
        (instance ?T Training)
        (agent ?T ?SA)
        (agent ?HELP ?SA)
        (patient ?HELP ?H)))))
      
(=>
  (instance ?SA ServiceAnimal)
  (modalAttribute
    (exists (?REST ?P ?E)
      (and
        (instance ?REST Restaurant)
        (instance ?P Airplane)
        (instance ?E Entering)
          (or
            (path ?E ?SA)
            (located ?REST ?SA)
            (located ?P ?SA)))) Legal))